<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayoutShortcutCategory"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:id="@+id/shortcutClothes"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/shortcutShoes">

        <androidx.cardview.widget.CardView
                android:id="@+id/shortcutCardView1"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="true">

            <ImageView
                    android:id="@+id/shortcutPhoto1"
                    android:layout_width="match_parent"
                    android:background="@mipmap/ic_launcher"
                    android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <TextView android:layout_width="84dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/shortcutName1"
                  android:paddingStart="2dp"
                  android:paddingEnd="2dp"
                  android:layout_gravity="center_horizontal"
                  android:gravity="center_horizontal"
                  android:maxLines="3"
                  android:ellipsize="end"
                  android:fontFamily="sans-serif"
                  android:text="Roupas"
        />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/shortcutShoes"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shortcutClothes" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/shortcutToys">

        <androidx.cardview.widget.CardView
                android:id="@+id/shortcutCardView2"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:background="@drawable/bear_xxhdpi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="true">

            <ImageView
                    android:id="@+id/shortcutPhoto2"
                    android:layout_width="match_parent"
                    android:background="@mipmap/ic_launcher"
                    android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <TextView android:layout_width="84dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/shortcutName2"
                  android:paddingStart="2dp"
                  android:paddingEnd="2dp"
                  android:layout_gravity="center_horizontal"
                  android:gravity="center_horizontal"
                  android:maxLines="3"
                  android:ellipsize="end"
                  android:fontFamily="sans-serif"
                  android:text="Sapatos"
        />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/shortcutToys"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shortcutShoes" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/shortcutTools">

        <androidx.cardview.widget.CardView
                android:id="@+id/shortcutCardView3"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:background="@drawable/bear_xxhdpi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="true">

            <ImageView
                    android:id="@+id/shortcutPhoto3"
                    android:layout_width="match_parent"
                    android:background="@mipmap/ic_launcher"
                    android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <TextView android:layout_width="84dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/shortcutName3"
                  android:paddingStart="2dp"
                  android:paddingEnd="2dp"
                  android:layout_gravity="center_horizontal"
                  android:gravity="center_horizontal"
                  android:maxLines="3"
                  android:ellipsize="end"
                  android:fontFamily="sans-serif"
                  android:text="Brinquedos"
        />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/shortcutTools"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shortcutToys" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.5">

        <androidx.cardview.widget.CardView
                android:id="@+id/shortcutCardView4"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:background="@drawable/bear_xxhdpi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="10dp"
                app:cardPreventCornerOverlap="true">

            <ImageView
                    android:id="@+id/shortcutPhoto4"
                    android:layout_width="match_parent"
                    android:background="@mipmap/ic_launcher"
                    android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <TextView android:layout_width="84dp"
                  android:layout_height="wrap_content"
                  android:id="@+id/shortcutName4"
                  android:paddingStart="2dp"
                  android:paddingEnd="2dp"
                  android:layout_gravity="center_horizontal"
                  android:gravity="center_horizontal"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:textSize="13sp"
                  android:fontFamily="sans-serif"
                  android:text="Ferramentas"
        />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>